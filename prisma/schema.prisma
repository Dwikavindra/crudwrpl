generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  email           String  @id @db.VarChar(500)
  name            String? @db.Char(40)
  profile_picture String? @db.VarChar(500)
}

model Seller {
  SellerID  Int     @id
  ProductID Int?
  name      String? @db.VarChar(40)
}

model orderdetail {
  custName      String   @db.VarChar(30)
  orderDate     DateTime @db.Date
  price         Int
  orderDetailID Int      @id
  orderID       Int
  orders        orders   @relation(fields: [orderID], references: [orderID], onDelete: Cascade, onUpdate: NoAction, map: "orderdetail_ibfk_1")

  @@index([orderID], map: "orderID")
}

model orders {
  orderID     Int           @id
  productID   String        @db.VarChar(255)
  warehouseID Int
  orderdetail orderdetail[]

  @@index([productID], map: "productID")
  @@index([warehouseID], map: "warehouseID")
}

model product {
  productID   String  @id @db.VarChar(255)
  name        String? @db.VarChar(14)
  description String? @db.VarChar(255)
  stock       Int?
  cost        String? @db.VarChar(15)
}

model transaction {
  id      Int     @id
  details String? @db.VarChar(255)
  date    String? @db.VarChar(255)
}
